<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#86737070">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/dialog">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7bf2e2"
                android:id="@+id/player1datashow"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ea97f7"
                android:id="@+id/player2datashow"
                android:layout_below="@+id/player1datashow"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp" />
            <TextView
                android:text="Tap the screen to close the dialog."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f4af65"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"/>

    </RelativeLayout>

</LinearLayout>